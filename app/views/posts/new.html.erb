<h1>New Post</h1>

<%= form_with model: @post do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, rows:'20', cols:'80' %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit' %>
  </div>

<% end %>

